<h1>Listing film_categories</h1>

<table>
  <thead>
    <tr>
      <th>Film</th>
      <th>Category</th>
      <th>Last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @film_categories.each do |film_category| %>
      <tr>
        <td><%= film_category.film %></td>
        <td><%= film_category.category %></td>
        <td><%= film_category.last_update %></td>
        <td><%= link_to 'Show', film_category %></td>
        <td><%= link_to 'Edit', edit_film_category_path(film_category) %></td>
        <td><%= link_to 'Destroy', film_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film category', new_film_category_path %>
