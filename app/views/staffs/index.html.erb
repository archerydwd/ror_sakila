<h1>Listing staffs</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Store</th>
      <th>Active</th>
      <th>Username</th>
      <th>Password</th>
      <th>Last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.first_name %></td>
        <td><%= staff.last_name %></td>
        <td><%= staff.address %></td>
        <td><%= staff.email %></td>
        <td><%= staff.store %></td>
        <td><%= staff.active %></td>
        <td><%= staff.username %></td>
        <td><%= staff.password %></td>
        <td><%= staff.last_update %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

