<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>District</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Phone</th>
      <th>Last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.address %></td>
        <td><%= address.district %></td>
        <td><%= address.city %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.phone %></td>
        <td><%= address.last_update %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
